.well.nested-fields
  = link_to_remove_association "<i class='fa fa-times'></i>".html_safe, f, class: 'btn btn-danger btn-xs pull-right'
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control', placeholder: 'ex.Name', required: true
  .form-group
    = f.label :price
    = f.number_field :price, class: 'form-control', placeholder: 'ex.10000', required: true